# Custom commands


## run: Run the app
.PHONY: run
run:
	cd ./app && ./mvnw clean spring-boot:run


## runa: Run the admin app
.PHONY: runa
runa:
	cd ./admin && ./mvnw clean spring-boot:run


## runp: Run the python app
.PHONY: runp
runp:
	cd ./pyshop && source .venv/bin/activate && uvicorn pyshop.main:app --reload


## git: Open git repository
.PHONY: git
git:
	cd ./server && open https://github.com/$$(git remote get-url origin | sed -E 's/git@github.com:(.*).git/\1/')


## web: Open the web
.PHONY: web
web:
	open http://localhost:3000


## weba: Open the web
.PHONY: weba
weba:
	open http://localhost:3100


## swagger: Open the swagger docs
.PHONY: swagger
swagger:
	open http://localhost:3000/swagger-ui/index.html


## swaggerp: Open the swagger docs
.PHONY: swaggerp
swaggerp:
	open http://localhost:8000/docs


## rabbit: Open RabbitMQ web interface
.PHONY: rabbit
rabbit:
	open http://localhost:15672/
